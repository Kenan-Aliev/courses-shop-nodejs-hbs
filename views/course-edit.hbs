<h1>Редактировать {{course.title}}</h1>

<form method='POST' action="/courses/edit" class="course-form">
    <div class="input-field">
        <input id="title" name='title' type="text" class="validate" required value="{{course.title}}"/>
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Введите название"/>
    </div>

    <div class="input-field">
        <input id="price" name='price' type="number" class="validate" required value="{{course.price}}"/>
        <label for="price">Цена курса</label>
        <span class="helper-text" data-error="Введите цену"/>
    </div>

    <div class="input-field">
        <input id="img" name='img' type="text" class="validate" required value="{{course.img}}">
        <label for="img">URL картинки</label>
        <span class="helper-text" data-error="Вставьте URL"/>
    </div>
    <input type="hidden" name="id" value="{{course._id}}"/>
    <input type="hidden" value="{{csrf}}" name="_csrf"/>
    <button class="btn btn-primary" type="submit">
        Редактировать курс
    </button>
</form>

<form action="/courses/remove" method="post">
    <input type="hidden" value="{{csrf}}" name="_csrf"/>
    <input type="hidden" name="id" value="{{course._id}}"/>
    <button class="btn red" type="submit">Удалить курс</button>
</form>